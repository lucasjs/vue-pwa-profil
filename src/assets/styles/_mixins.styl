// @stylint off
linear_gradient(origin, colors...)

    fallback = colors[1][0]

    colors = join(', ', colors)
    colors = unquote(colors)

    background-color fallback
    background-image -webkit-linear-gradient(origin, colors) // Chrome, Safari
    // background-image    -moz-linear-gradient(origin, colors) // Firefox (3.6 - 15)
    // background-image     -ms-linear-gradient(origin, colors) // IE 10
    // background-image      -o-linear-gradient(origin, colors) // Opera (11.1 - 12.0)
    // background-image         linear-gradient(origin, colors) // W3C

light-border($color = $pink)
	border 2px solid $color
	box-shadow 2px 1px 5px 0px lighten($color, 50%)

nowrap-list()
	list-style none
	white-space nowrap
	padding 0
	display flex
	overflow-x auto


nowrap-list-item()
	display inline-flex
	flex-direction column
	white-space normal
	text-align center
	overflow hidden

	&:not(:first-child)
		margin-left 20px

	&:first-child
		padding-left 20px

	&:last-child
		padding-right 20px

holder()
	max-width 500px
	margin 0 auto

